@model WebProject.Models.Quiz.QuizCompletedModel
@{
    ViewBag.Title = "Quiz Completed";
}

<link href="~/Content/question.css" rel="stylesheet">

<img src="~/Images/quizCompleted.png"/>
<div class="answer">Number of correct answers: @Model.NumberOfCorrectAnswers </div>
<div class="answer">Time spent: @Model.TimeSpent.Value.Minutes minutes and @Model.TimeSpent.Value.Seconds seconds </div>
<div>
    <a href="@Url.Action("StartTest", "Quiz")">
        <img src="~/Images/btnStartNewTest.png" alt="Start a new test"/>
    </a>
    <a href="@Url.Action("Register", "Account")">
        <img src="~/Images/btnRegister.png" alt="Register"/>
    </a>
</div>